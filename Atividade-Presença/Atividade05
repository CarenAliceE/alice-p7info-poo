package br.estacio.objetos.exemplos;

public class Bola 
{
 // Atributos
 
 String cor;
 int tamanho;
 boolean cheia;
 
 // MÃ©todos
 
 void encher()
 {
 cheia = true;
 }
 
 void esvaziar()
 {
 cheia = false;
 }
 
 void pintar(String cor)
 {
 this.cor = cor;
 }
 
 void definirTamanho(int tam)
 {
 if (tam > 0)
 tamanho = tam;
 }
 
}

